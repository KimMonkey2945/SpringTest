<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.totti.test.lastPrac.dao.LastDAO">
 
 	<select id="selectList" resultType="com.totti.test.lastPrac.model.Last">
 		SELECT
 			`id`
 			,`name`
 			,`date`
 			,`day`
 			,`headcount`
 			,`phoneNumber`
 			,`state`
 		FROM
 			`booking`
 	</select>
 	
 	<delete id="deleteList" parameterType="int">
 		DELETE FROM `booking`
 		WHERE id = #{id}
 	</delete>
 	
 	<insert id="insertList" parameterType="map">
 		INSERT INTO `booking`
 		(	`name`
 			,`date`
 			,`day`
 			,`headcount`
 			,`phoneNumber`
 			,`state`
 			,`createdAt`
 			,`updatedAt`
 		)VALUES(
 			#{name}
 			,#{date}
 			,#{day}
 			,#{headcount}
 			,#{phoneNumber}
 			,#{state}
 			,now()
 			,now() 		
 		);
 		
 	</insert>
 	
 	<select id="selectReservation" resultType="com.totti.test.lesson06.model.Booking" parameterType="map">
 		SELECT
 			`name`
 			,`date`
 			,`day`
 			,`headcount`
 			,`state`
 		FROM
 			`booking`
 		WHERE
 			`name` = #{name} 
 			AND `phoneNumber` = #{phoneNumber}
 	</select>
 
 </mapper>